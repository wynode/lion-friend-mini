.map-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-bar {
  width: 90%;
  margin: 10px 0;
}

.search-bar input {
  width: 100%;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.radius-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin: 10px 0;
}

