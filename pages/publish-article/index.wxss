page {
  box-sizing: border-box;
  /* padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx); */
}

.page-background {
  background-color: #f7f8fa;
}

.page-container {
  /* padding: 30rpx; */
}

.container {
  padding: 32rpx;
  background-color: #fff;
  min-height: 100vh;
}

.t-upload {
  margin-bottom: 20rpx;
}

.t-input,
.t-textarea {
  margin-bottom: 20rpx;
  background-color: #fff;
}

.footer {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
}

.t-button {
  background-color: #ffc82f !important;
}

.textarea {
  border-bottom: 1px solid #d8d8d8;
}

.container .t-textarea__wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container .t-textarea {
  padding: 34rpx 0 4rpx;
}

.container .t-textarea__wrapper-inner {
  font-size: 28rpx !important;
  font-weight: normal;
}

.container .t-textarea__indicator {
  flex-shrink: 0;
  padding-top: 0 !important;
}

.container {
  --td-cell-title-font-size: 24rpx;
  --td-cell-title-color: #979797;
  --td-cell-note-font-size: 24rpx;
  --td-cell-note-color: #979797;
  --td-cell-right-icon-font-size: 32rpx;
}
.container .t-cell__title {
  width: 100rpx;
  flex-grow: 0;
}
.container .t-cell__note {
  display: flex;
  justify-content: flex-start;
}

.publish-btn {
  position: absolute;
  left: 33rpx;
  bottom: 100rpx;
  width: 685rpx;
  height: 95rpx;
  border-radius: 12rpx;
  opacity: 1;

  background: #ffc82f;
  font-size: 31rpx;
  font-weight: 500;
  line-height: 38rpx;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.publish-btn:hover {
  opacity: 0.9;
}

.container .t-grid-item__content {
 padding: 0;
}

.wrapper {
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}