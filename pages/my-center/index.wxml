<view class="page-background">
  <view class="page-container">
    <view class="my-center-info">
      <view class="mci-header">
        <view class="mci-header-left">
          <t-image
            shape="circle"
            mode="aspectFill"
            class="mci-header-avatar"
            src="/assets/images/my/user-avatar.png"
          ></t-image>
          <view class="mcihl-info">
            <view class="mcihl-info-name"> {{userInfo.name}} </view>
            <view class="mcihl-info-item"> 友友ID：{{userInfo.id}} </view>
            <view class="mcihl-info-item">IP属地：{{userInfo.ip}}</view>
          </view>
        </view>
        <view class="mci-header-right">
          <view class="mcihr-item">
            <t-image
              class="mcihr-item-img"
              src="/assets/images/my/edit.svg"
            ></t-image>
            <view class="mcihr-item-title"> 编辑</view>
          </view>
          <view class="mcihr-item">
            <t-image
              class="mcihr-item-img"
              src="/assets/images/my/setting.svg"
            ></t-image>
            <view class="mcihr-item-title"> 设置</view>
          </view>
        </view>
      </view>
      <view class="mci-desc"> {{ userInfo.desc }} </view>
      <view class="mci-statis">
        <view
          wx:for="{{userStatis}}"
          wx:key="index"
          class="mcis-item"
        >
          <view class="mcis-item-value">{{item.value}}</view>
          <view class="mcis-item-label"> {{item.label}} </view>
        </view>
      </view>
    </view>

    <view class="my-center-detail">
      <t-tabs
        defaultValue="{{0}}"
        bind:change="onTabsChange"
        t-class="custom-tabs"
        t-class-content="custom-panel"
        t-class-active="custom-tabs-acitve"
      >
        <t-tab-panel
          label="发布"
          value="0"
        >
        </t-tab-panel>
        <t-tab-panel
          label="收藏"
          value="1"
          >选项二内容</t-tab-panel
        >
        <t-tab-panel
          label="点赞"
          value="2"
          >选项三内容</t-tab-panel
        >
        <view>
          <view>房源</view>
          <view>文章</view>
          <view>禁用</view>
        </view>
      </t-tabs>
    </view>
  </view>
</view>
