page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.page-background {
  /* background: radial-gradient(rgba(255, 255, 255, 90%), rgb(255, 255, 255)); */
  background: #f7f8fa;
  color: #333;
  /* height: calc(100vh - env(safe-area-inset-bottom) - 96rpx); */
  overflow: scroll;
}

.page-container {
  /* padding: 30rpx; */
}

.home-swiper-container {
  z-index: -1;
  --td-swiper-radius: 0rpx;
}

.home-service {
  width: 685rpx;
  height: 260rpx;
  box-sizing: border-box;
  border-radius: 18px;
  opacity: 1;
  background: #ffffff;
  box-shadow: 0px 4px 20px 0px #dddfe4;
  margin: 0 auto;
  margin-top: 32rpx;
  padding: 22rpx 38rpx;
}

.home-service-item {
  display: flex;
  align-items: center;
  padding: 8rpx;
}

.hsi-image {
  width: 64rpx;
  height: 64rpx;
}

.home-service .t-col:nth-child(2n + 1) {
  border-right: 1rpx solid #d8d8d8;
}

.home-service .t-col:nth-child(1) {
  padding: 0 48rpx 20rpx 0;
  border-bottom: 1rpx solid #d8d8d8;
}

.home-service .t-col:nth-child(2) {
  border-bottom: 1rpx solid #d8d8d8;
  padding: 0 0 20rpx 48rpx;
}
.home-service .t-col:nth-child(3) {
  padding: 20rpx 48rpx 0 0;
}
.home-service .t-col:nth-child(4) {
  padding: 20rpx 0 0 48rpx;
}

.hsi-right {
  margin-left: 15rpx;
}

.hsi-right-top {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}
.hsi-right-bottom {
  font-size: 20rpx;
  font-weight: normal;
  color: #979797;
}

.home-notice-bar {
  width: 685rpx;
  height: 44rpx;
  border-radius: 12rpx;
  opacity: 1;

  background: #ffffff;
  margin: 0 auto;
  margin-top: 24rpx;
  margin-bottom: 20rpx;
}

.home-notice-bar .t-notice-bar {
  width: 685rpx;
  height: 44rpx;
  border-radius: 12rpx;
  opacity: 1;

  background: #ffffff;
  font-size: 20rpx;
  font-weight: normal;
  color: #979797;
  padding: 0;
}

.home-notice-bar .t-notice-bar .t-notice-bar__content-wrap {
  color: #979797;
  margin-left: 30rpx;
}

