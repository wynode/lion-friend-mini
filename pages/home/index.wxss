page {
  box-sizing: border-box;
  /* padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx); */
}

.page-background {
  /* background: radial-gradient(rgba(255, 255, 255, 90%), rgb(255, 255, 255)); */
  background: #f7f8fa;
  color: #333;
  height: calc(100vh - env(safe-area-inset-bottom) - 96rpx);
  overflow: scroll;
  /* padding-bottom: 24rpx; */
}

.page-container {
  /* padding: 30rpx; */
}

.home-swiper-container {
  z-index: -1;
  --td-swiper-radius: 0rpx;
}

.home-service {
  width: 685rpx;
  height: 260rpx;
  box-sizing: border-box;
  border-radius: 18px;
  opacity: 1;
  background: #ffffff;
  box-shadow: 0px 4px 20px 0px #dddfe4;
  margin: 0 auto;
  margin-top: 32rpx;
  padding: 22rpx 38rpx;
}

.home-service-item {
  display: flex;
  align-items: center;
  padding: 8rpx;
}

.hsi-image {
  width: 64rpx;
  height: 64rpx;
}

.home-service .t-col:nth-child(2n + 1) {
  border-right: 1rpx solid #d8d8d8;
}

.home-service .t-col:nth-child(1) {
  padding: 0 48rpx 20rpx 0;
  border-bottom: 1rpx solid #d8d8d8;
}

.home-service .t-col:nth-child(2) {
  border-bottom: 1rpx solid #d8d8d8;
  padding: 0 0 20rpx 48rpx;
}
.home-service .t-col:nth-child(3) {
  padding: 20rpx 48rpx 0 0;
}
.home-service .t-col:nth-child(4) {
  padding: 20rpx 0 0 48rpx;
}

.hsi-right {
  margin-left: 15rpx;
}

.hsi-right-top {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}
.hsi-right-bottom {
  font-size: 20rpx;
  font-weight: normal;
  color: #979797;
}

.home-notice-bar {
  width: 685rpx;
  height: 41rpx;
  border-radius: 12rpx;
  opacity: 1;

  background: #ffffff;
  margin: 0 auto;
  margin-top: 24rpx;
  margin-bottom: 20rpx;
}

.home-notice-bar .t-notice-bar {
  width: 685rpx;
  height: 41rpx;
  border-radius: 12rpx;
  opacity: 1;

  background: #ffffff;
  font-size: 18rpx;
  font-weight: normal;
  color: #979797;
  padding: 0;
}

.home-notice-bar .t-notice-bar .t-notice-bar__content-wrap {
  color: #979797;
  margin-left: 30rpx;
}

.home-house-container {
  width: 685rpx;
  margin: 0 auto;
}

.home-house-item {
  width: 325rpx;
  border-radius: 18rpx;
  overflow: hidden;
  opacity: 1;
  margin-bottom: 30rpx;

  background: #ffffff;
}

.home-house-image {
  width: 100%;
  height: 296rpx;
}

.home-house-info {
  padding: 18rpx;
}

home-house-title {
  font-weight: 600;
  font-size: 24rpx;
  color: #000000;
}

.home-house-desc {
  font-weight: 400;
  font-size: 18rpx;
  color: #979797;
}

.home-house-cost {
  margin: 12rpx 0 18rpx 0;
  display: flex;
  align-items: flex-end;
}

.home-house-unit {
  font-size: 18rpx;
  font-weight: 500;
  color: #ffc82f;
  margin-bottom: 4rpx;
  margin-right: 6rpx;
}

.home-house-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffc82f;
}

.home-house-tags {
  display: flex;
  flex-wrap: wrap;
}

.home-house-tag {
  flex-shrink: 0;
  border-radius: 24rpx;
  padding: 6rpx 16rpx;
  margin-right: 4rpx;
  margin-top: 6rpx;
  margin-left: 4rpx;
  border: 1rpx solid #d8d8d8;
  font-size: 14rpx;
  font-weight: normal;
  color: #979797;
}
