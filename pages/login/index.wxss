.page_bg {
  padding: 94rpx 40rpx;
}

.input-example {
  margin: 20rpx 32rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 76rpx !important;
  height: 76rpx !important;
  background-color: #fff;
  color: #fff;
  /* border: 1px solid #ccc; */
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  /* display: block; */
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  /* border-radius: 60%; */
  /* margin-left: 10rpx; */
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.nickname-input .t-input__control {
  margin-left: 34rpx;
}

.login_button {
  width: 640rpx;
  height: 88rpx;

  border-radius: 46rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: 400;
  font-size: 32rpx;
}

.login_disabled {
  background: #cacaca;
}

.page_bg .t-input__wrap--suffix-icon {
  padding-left: 10rpx;
}

.login_cango {
  background: #ffc82f;
}

.t-button::after {
  border: none;
}


.partner_info_gou .t-radio__border {
  height: 0;
}
.partner_info_gou .t-radio {
  --td-radio-icon-checked-color: #ffc82f;
  display: flex;
  align-items: center;
  padding: 0;
}
.partner_info_gou .t-radio__icon-circle {
  width: 32rpx !important;
  height: 32rpx !important;
  font-size: 32rpx;
}
.partner_info_gou .t-radio__icon {
  width: 32rpx !important;
  height: 32rpx !important;
  font-size: 32rpx;
}
.partner_info_gou .t-radio__icon--checked {
  width: 32rpx !important;
  height: 32rpx !important;
  font-size: 32rpx;
}
.partner_info_gou .t-icon-check-circle-filled {
  width: 32rpx !important;
  height: 32rpx !important;
  font-size: 32rpx;
}
