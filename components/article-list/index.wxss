.article-item {
  border-radius: 18rpx;
  overflow: hidden;
  opacity: 1;
  margin-bottom: 30rpx;
  background: #ffffff;
}

.article-image {
  width: 100%;
  height: 296rpx;
}

.article-content {
  padding: 0 18rpx;
  padding-bottom: 20rpx;
}

.article-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #000;
  margin-top: 25rpx;
  overflow: hidden;
  line-height: 32rpx;
  min-height: 64rpx;

  /* letter-spacing: -0.03em; */
}

.article-info {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  justify-content: space-between;
}

.author-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 14rpx;
}

.author-name {
  font-size: 18rpx;
  color: #666;
  margin-right: 20rpx;
  width: 148rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.like-container {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 24rpx;
  height: 21rpx;
  margin-right: 12rpx;
}

.like-count {
  font-size: 18rpx;
  color: #353535;
}
